// SAKURAPAY SOVEREIGN LEDGER v1.0
// Designed for pay.sakuragroup.co.tz

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SAKURAPAY_DATABASE_URL")
}

model MerchantNode {
  id              String    @id @default(cuid())
  organization    String    // e.g., "Axis Messaging"
  apiSecret       String    @unique @default(cuid()) 
  webhookUrl      String?   // The destination for automated sessions
  
  // MERCHANT PLUG-INS
  mpesaPaybill    String?   // Lipa Namba
  tigoMerchantId  String?
  crdbAccount     String?
  
  status          String    @default("ACTIVE")
  handshakes      Handshake[]
  createdAt       DateTime  @default(now())
}

model Handshake {
  id              String    @id @default(cuid())
  reference       String    @unique // M-Pesa / Bank Reference
  amount          Float
  senderPhone     String?
  status          String    @default("PENDING") // PENDING, VERIFIED
  
  merchantId      String
  merchant        MerchantNode @relation(fields: [merchantId], references: [id])
  
  webhookSent     Boolean   @default(false)
  verifiedAt      DateTime?
  createdAt       DateTime  @default(now())
}
