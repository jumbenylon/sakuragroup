// SAKURAPAY INDEPENDENT LEDGER v1.0
// Logic: Standalone Payment Aggregation Node

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SAKURAPAY_DATABASE_URL")
}

model Merchant {
  id              String    @id @default(cuid())
  organization    String    // e.g., "Axis Messaging"
  apiSecret       String    @unique @default(cuid()) 
  webhookUrl      String?   // Destination for verified payment signals
  
  // MERCHANT PLUG-INS (The "Middle Gateway" connections)
  mpesaPaybill    String?   // Merchant's Lipa Namba
  crdbAccount     String?
  selcomId        String?
  
  status          String    @default("ACTIVE")
  payments        Payment[]
  createdAt       DateTime  @default(now())
}

model Payment {
  id              String    @id @default(cuid())
  merchantId      String
  merchant        Merchant  @relation(fields: [merchantId], references: [id])
  
  reference       String    @unique // The M-Pesa / Bank Ref ID
  amount          Float
  sender          String?   // Payer's phone (255...)
  provider        String    // MPESA, CRDB, etc.
  status          String    @default("PENDING") // PENDING, VERIFIED
  
  webhookSent     Boolean   @default(false)
  verifiedAt      DateTime?
  createdAt       DateTime  @default(now())
}
