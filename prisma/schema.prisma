// v1.5 - Final Corrected Schema
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  password      String       
  role          String       @default("USER") 
  status        String       @default("PENDING")
  balance       Float        @default(0.0)
  smsRate       Int          @default(25)
  contacts      Contact[]
  messages      MessageLog[]
  apiKeys       ApiKey[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model ApiKey {
  id        String   @id @default(uuid())
  key       String   @unique 
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model MessageLog {
  id           String   @id @default(uuid())
  userId       String?  
  user         User?    @relation(fields: [userId], references: [id])
  recipient    String
  message      String
  status       String   
  costToAdmin  Int      @default(19)
  costToTenant Int      @default(25)
  segmentCount Int      @default(1)
  providerId   String?  
  errorCode    Int?
  errorReason  String?
  sentAt       DateTime @default(now())
}

model Contact {
  id        String   @id @default(uuid())
  phone     String
  firstName String?
  lastName  String?
  userId    String?  
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([phone, userId])
}
