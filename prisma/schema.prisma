// Copy this into prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  
  // [NEW] Sovereign Identity Fields
  // We make them optional (?) at the DB level to prevent migration errors
  // for existing users (like your admin), but the API will enforce them.
  name          String?   
  organization  String?
  phoneNumber   String?
  
  role          Role      @default(USER)
  status        String    @default("PENDING")
  balance       Float     @default(0)
  smsRate       Float     @default(28)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  senderIds     SenderId[]
  messageLogs   MessageLog[]
  transactions  Transaction[]
}

model SenderId {
  id            String    @id @default(cuid())
  senderId      String
  status        SenderStatus @default(PENDING)
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model MessageLog {
  id            String    @id @default(cuid())
  content       String
  recipient     String
  status        String
  costToTenant  Float     @default(28)
  costToAdmin   Float     @default(18)
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  sentAt        DateTime  @default(now())
}

model Transaction {
  id            String    @id @default(cuid())
  amount        Float
  type          String    // "CREDIT" or "DEBIT"
  reference     String?
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime  @default(now())
}

enum Role {
  USER
  ADMIN
}

enum SenderStatus {
  PENDING
  APPROVED
  REJECTED
}
